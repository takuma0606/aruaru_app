<main id="show-page">
  <div class="show-container">
    <div class="post-detail">
      <div class="user_area">
        <div class="post-user">
          <%= image_tag 'Eric-cartman.png' %><%= link_to @post.user.name, user_posts_path %>
        </div>
        <div class="edit-or-destroy">
          <%= link_to edit_post_path(@post) do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
          <%= link_to post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" } do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
      </div>
      <p class="text"><%= @post.content %></p>
      <%= render 'partial_template/post_show', post: @post %>
    </div>
    <div class="comment-area">
     <ul>
     <li>コメント  <%= @comments.count %>件</li>
     <%= render partial: 'partial_template/comment', collection: @comments %>
     </ul>
    </div>
  </div>
</main>