<main id="page">
<div class="container">
  <div class="header-field">
    <% if @tag %>
    <p class="post-number">#<%= @tag.name %> <%= @posts.count %>件</p>
    <% else %>
    <p class="post-number">検索されたワードの投稿はありませんでした</p>
    <% end %>
  </div>
  <div class="index-box">
    <div class="posts-area">
      <% @posts.each do |post| %>
        <div class="post post_<%= post.id %>">
          <%= render 'partial_template/post_function', post: post %>
        </div>
      <% end %>
    </div>
    <aside>
      <div class="ads"></div>
      <div class="user-ranking">
        <ul>
        <li>あるある取得ランキング</li>
        <% 8.times do |number|%>
          <li>
          </li>
        <% end %>
        </ul>
      </div>
    </aside>
  </div>
</div>
</main>