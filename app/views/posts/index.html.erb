<main id="page">
<div class="container">
  <div class="header-field">
    <% if @tag %>
    <p class="post-number">#<%= @tag.name %> <%= @posts.count %>件</p>
    <% else %>
    <p class="post-number">検索されたワードの投稿はありませんでした</p>
    <% end %>
  </div>
  <div class="index-box">
    <div class="posts-area">
      <% @posts.each do |post| %>
        <div class="post">
          <p class="user-area"><%= image_tag 'Eric-cartman.png' %><%= link_to post.user.name, user_posts_path %></p>
          <%= link_to post.content, "/posts/#{post.id}", class: "text" %>
          <%= render 'partial_template/post_function', post: post %>
        </div>
      <% end %>
    </div>
    <aside>
      <div class="ads"></div>
      <div class="user-ranking">
        <ul>
        <li>あるある取得ランキング</li>
        <% 8.times do |number|%>
          <li>
          </li>
        <% end %>
        </ul>
      </div>
    </aside>
  </div>
</div>
</main>