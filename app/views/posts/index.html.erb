<main id="index-page">
<div class="header-field">
  <div class="search-box">
    <input class="search-txt" type="text" name="" placeholder="  #検索">
    <a href="#" class="search-btn"><i class="fas fa-search"></i></a>
  </div>
</div>
<div class="container">
  <div class="posts-area">
    <% 9.times do %>
      <div class="post">
        <p class="text">テスト中先生の行動確認しがち</p>
        <div class="function">
          <div class="btn-area">
            <button type="button" class="aruaru-btn">あるある</button>
            <div class="bar">
