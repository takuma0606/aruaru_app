<div class="search-box">
<%= search_form_for @q, url: posts_path do |f| %>
  <%= f.button :type => "submit", class: "search-btn" do %>
    <i class="fas fa-search fa-lg"></i>
  <% end %>
  <%= f.search_field :name_cont, class: "search-txt", placeholder: "タグを検索", autocomplete: :off %>
<% end %>
</div>